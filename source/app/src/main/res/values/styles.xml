<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- android: prefixed versions should be sufficient with a NoActionBar parent -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <!-- Core color attributes for Toolbar and other components -->
        <item name="colorPrimary">@color/apptheme_color</item>
        <item name="colorPrimaryVariant">@color/apptheme_color</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Your existing styles below -->
    <style name="SecretBox" />

    <style name="SecretBox.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/apptheme_color</item>
        <!-- Support library compatibility -->
        <item name="background">@color/apptheme_color</item>
    </style>

    <style name="SecretBox.TextAppearance" parent="android:style/TextAppearance">
        <item name="android:textSize">@dimen/text_size_main</item>
    </style>

    <style name="SecretBox.TextAppearance.Title">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SecretBox.TextAppearance.Small">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="SecretBox.TextAppearance.Title.Grey">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/grey_transparent</item>
    </style>

    <style name="SecretBox.TextAppearance.AlertDialog">
        <item name="android:textColor">@color/apptheme_color</item>
    </style>

    <style name="SecretBox.AlertDialog">
    </style>

    <style name="SecretBox.AlertDialog.Title" parent="SecretBox.TextAppearance.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/apptheme_color</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="SecretBox.AlertDialog.Button" parent="Widget.MaterialComponents.Button.TextButton">
        <!-- <item name="android:background">@android:color/transparent</item> DON'T NEED with TextButton -->
        <item name="android:textColor">@color/apptheme_color</item>
    </style>

</resources>
