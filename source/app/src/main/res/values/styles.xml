<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- AppCompat specific attributes for no action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Material Components Color Palette -->
        <item name="colorPrimary">@color/apptheme_color</item>
        <item name="colorOnPrimary">@android:color/white</item> <!-- Standard white for text on primary -->
        <item name="colorPrimaryVariant">@color/apptheme_color</item> <!-- For status bar, etc. -->
        
        <!-- Explicitly set status bar color for API 21+ -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/apptheme_color</item>

        <item name="colorSecondary">@color/apptheme_color</item> <!-- Accent color -->
        <item name="colorOnSecondary">@android:color/white</item> <!-- Standard white for text on secondary -->
        
        <!-- Default icon and control tints -->
        <item name="colorControlNormal">@color/white</item> <!-- Project-defined white -->
        <item name="android:textColorSecondary">@color/white</item> <!-- Project-defined white, also influences icon colors -->

        <!-- Default hint text color for basic EditText (TextInputLayout has its own) -->
        <item name="android:textColorHint">@color/grey_transparent</item>

        <!-- Custom AlertDialog Theme -->
        <item name="materialAlertDialogTheme">@style/AppTheme.MaterialAlertDialog</item>

        <!-- Default TextInputLayout style -->
        <item name="textInputStyle">@style/AppTheme.TextInputLayout.OutlinedBox</item>
    </style>

    <!-- Toolbar Title Text Appearance (kept for potential direct use, but overlay is preferred) -->
    <style name="AppTheme.Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Specific Toolbar Overlay Theme -->
    <style name="AppTheme.ToolbarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- This theme forces dark (e.g., brown) toolbar with light (e.g., white) text -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="titleTextColor">@color/white</item> <!-- More specific for title -->
    </style>

    <!-- Custom AlertDialog Theme -->
    <style name="AppTheme.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Using apptheme_color for title and button text as per original desire -->
        <item name="materialAlertDialogTitleTextStyle">@style/AppTheme.AlertDialog.TitleText</item>
        <item name="buttonBarPositiveButtonStyle">@style/AppTheme.AlertDialog.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/AppTheme.AlertDialog.Button</item>
        <item name="buttonBarNeutralButtonStyle">@style/AppTheme.AlertDialog.Button</item>
    </style>

    <style name="AppTheme.AlertDialog.TitleText" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/apptheme_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.AlertDialog.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/apptheme_color</item>
    </style>

    <!-- TextInputLayout Styles -->
    <style name="AppTheme.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/AppTheme.TextInputLayout.HintText.Outlined</item>
        <item name="boxStrokeColor">@color/apptheme_color</item> <!-- Outline color when focused -->
        <item name="android:textColorHint">@color/grey_transparent</item> <!-- Default hint color (unfocused, non-floating) -->
    </style>

    <style name="AppTheme.TextInputLayout.HintText.Outlined" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/grey_transparent</item> <!-- Color of the floating hint when text is entered/focused -->
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Fullscreen Theme (remains as is, if used) -->
    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
    </style>

</resources>
