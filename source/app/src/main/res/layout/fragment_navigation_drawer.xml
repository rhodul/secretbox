<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:background="@android:color/white"
    tools:context="com.gnugu.shoppinglistplus.NavigationDrawerFragment" >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:paddingEnd="0dp"
        android:paddingStart="0dp"
        android:showDividers="none">

        <EditText
            android:id="@+id/new_compartment_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/compartmentNameHint"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_margin="0dp"
            android:layout_weight="1" />
            <!-- style="@style/SecretBox.TextAppearance.Title" Removed -->

        <ImageButton
            android:id="@+id/add"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="13dp"
            android:layout_gravity="center_vertical"
            style="@style/Widget.AppCompat.ActionButton"
            android:gravity="center"
            android:src="@drawable/ic_action_new_dark" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:choiceMode="singleChoice"
            android:divider="@color/apptheme_color_transparent"
            android:dividerHeight="1dp" />

        <include android:id="@+id/nothing"
            android:visibility="gone"
            layout="@layout/fragment_nothing_here" />

    </FrameLayout>


</LinearLayout>
