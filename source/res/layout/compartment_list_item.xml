<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:paddingLeft="14dip"
	android:padding="8dip">

	<TextView android:id="@+id/compartmentName"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:singleLine="true" android:ellipsize="marquee" android:gravity="center_vertical|left"
		android:textAppearance="?android:attr/textAppearanceLarge" />
	<TextView android:id="@+id/secretCount" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceSmall" />
</LinearLayout>