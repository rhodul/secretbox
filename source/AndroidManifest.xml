<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.gnugu.secretbox" android:versionCode="109"
	android:versionName="1.0.9">
	<application android:name="Application" android:icon="@drawable/icon"
		android:label="@string/appName">
		
		<!-- android:configChanges is there to prevent the system form creating
		new activity every time user changes the orientation -->
		<activity android:name=".CompartmentList" android:label="@string/appName"
        	android:launchMode="singleTask"
            android:configChanges="keyboard|keyboardHidden|orientation">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

        <!-- android:configChanges is there to prevent the system form creating
        new activity every time user changes the orientation -->
        <activity android:name=".About" android:label="@string/appName"
        android:configChanges="keyboard|keyboardHidden|orientation" />

        <!-- android:configChanges is there to prevent the system form creating
        new activity every time user changes the orientation -->
		<activity android:name=".NewSecretBox" android:label="@string/newSecretBoxTitle"
		android:configChanges="keyboard|keyboardHidden|orientation" />

        <!-- android:configChanges is there to prevent the system form creating
        new activity every time user changes the orientation -->
        <activity android:name=".ChangePassword" android:label="@string/changePassword"
        android:configChanges="keyboard|keyboardHidden|orientation" />

        <!-- android:configChanges is there to prevent the system form creating
        new activity every time user changes the orientation -->
        <activity android:name=".CompartmentEditor"
        android:theme="@android:style/Theme.Dialog"
        android:configChanges="keyboard|keyboardHidden|orientation" />

        <!-- android:configChanges is there to prevent the system form creating
        new activity every time user changes the orientation -->
        <activity android:name=".SecretList"
            android:configChanges="keyboard|keyboardHidden|orientation">
        </activity>

        <!-- android:configChanges is there to prevent the system form creating
        new activity every time user changes the orientation -->
        <activity android:name=".SecretEditor"
            android:configChanges="keyboard|keyboardHidden|orientation">
        </activity>

        <!-- android:configChanges is there to prevent the system form creating
        new activity every time user changes the orientation -->
        <activity android:name=".SecretImages"
            android:configChanges="keyboard|keyboardHidden|orientation">
        </activity>

	</application>
	<uses-sdk android:minSdkVersion="3" />
</manifest> 
